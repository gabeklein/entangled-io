{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Service",
      "cwd": "${workspaceFolder}/example/api",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--nolazy",
        "-r", "ts-node/register", 
        "-r", "source-map-support/register", 
        "-r", "./src/start.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite",
      "cwd": "${workspaceFolder}/example/client",
      "program": "node_modules/vite/bin/vite.js",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "-r", "ts-node/register",
        "-r", "source-map-support/register"
      ]
    }
  ]
}