{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Service",
      "cwd": "${workspaceFolder}/example/api",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--nolazy",
        "-r", "ts-node/register", 
        "-r", "source-map-support/register", 
        "-r", "./src/start.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run webpack-dev-server",
      "cwd": "${workspaceFolder}/example/client",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "console": "externalTerminal",
      "args": [
        "--config", "./webpack.agent.js"
      ],
      "runtimeArgs": [
        "-r", "source-map-support/register"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run vite",
      "cwd": "${workspaceFolder}/example/client",
      "program": "node_modules/vite/bin/vite.js",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "-r", "ts-node/register",
        "-r", "source-map-support/register"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Webpack (Server)",
      "cwd": "${workspaceFolder}/example/api",
      "program": "${workspaceFolder}/packages/cli/bin/entangle.js",
      "console": "integratedTerminal",
      "args": [
        "serve", "./src/index.ts"
      ],
      "runtimeArgs": [
        "-r", "source-map-support/register"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Webpack (MicroservicePlugin)",
      "cwd": "${workspaceFolder}/example/client",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "console": "externalTerminal",
      "args": [
        "--watch",
        "--stats-children",
        "--config", "./webpack.service.js"
      ],
      "runtimeArgs": [
        "-r", "source-map-support/register"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Webpack (ServiceAgentPlugin)",
      "cwd": "${workspaceFolder}/example/client",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "console": "externalTerminal",
      "args": [
        "--watch",
        "--stats-children",
        "--config", "./webpack.agent.js"
      ],
      "runtimeArgs": [
        "-r", "source-map-support/register"
      ]
    }
  ]
}