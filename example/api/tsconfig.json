{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2018"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noUnusedLocals": true,
    "paths": {
      "@entangled/*": [
        "../../packages/*/src"
      ]
    }
  },
}