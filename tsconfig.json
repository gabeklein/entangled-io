{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "paths": {
      "@example/*": [
        "./example/*/src"
      ],
      "@entangled/*": [
        "./packages/*/src"
      ]
    }
  }
}